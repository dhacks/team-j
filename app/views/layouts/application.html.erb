<!DOCTYPE html>
<html>
<head>
</head>
<body>
<header class="header">
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <div class="header__bar row">
      <h1 class="grid-6"><a href="/">Pink</a></h1>






      <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <span><%= current_user.id %>
            <ul class="user__info">
              <li>
                <a href="/users/<%= current_user.id %>">マイページ</a>
          <%= link_to "ログアウト", users_sign_out_path, method: :delete %>
          <a class="post" href="/lunchrequests/new">投稿する</a>


          <li><%= link_to "プロフィール編集", edit_user_path(current_user) %></li>

        </div>







      <% else %>
        <div class="grid-6">
          <%= link_to "ログイン", new_user_session_path, class: 'post' %>
          <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
        </div>
      <% end %>
    </div>
  </header>


  <%= yield %>

</body>
</html>

