    <div class="col-sm-3" >
    </div>
    <div class="col-sm-3 col-xs-6 text-center" >
        <%= link_to "新規登録", new_user_registration_path, { :class => "btn btn-black btn-lg" } %>
    </div>
    <div class="col-sm-3 col-xs-6 text-center">
        <button type="submit" class="btn btn-black btn-lg" onclick="display()">ログイン </button>
    </div>
    <div class="col-sm-3" >
    </div>
    
    <div id="form1" style="display:none;">
        <!--
        <p class="form1-title">Login</p>
        <form action="post">
            <p>Email</p>
